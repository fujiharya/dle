<div class="player">
	<div>
		<div class="col-sm-4 player-play pbutton">
			<i class="fa fa-play"></i>
		</div>
		<div class="player-info col-sm-8">
			<p>Навзвание трека</p>
			<p class="player-wave">Поток: Radiant</p>
		</div>
		<div class="clearfix"></div>
	</div>
	<div class="player-pad-pbutton-panel">
		<div class="col-sm-2 pmn player-add" data-toggle="tooltip" data-placement="top" title="Сменить поток">
			<div class="player-pad pbutton">
				<i class="fa fa-refresh"> </i>
			</div>
		</div>
		<div class="col-sm-2 pmn player-add" data-toggle="tooltip" data-placement="top" title="Поиск трека в vk.com">
			<div class="player-pad pbutton">
				<i class="fa fa-search"> </i>
			</div>
		</div>
		<div class="col-sm-2 pmn player-add" data-toggle="tooltip" data-placement="top" title="Включить HD-качество">
			<div class="player-pad pbutton">
				<i class="fa fa-toggle-off"> </i>
			</div>
		</div>
		<div class="col-sm-5 pmn">
			<input type="range" id="volume_value" class="pmn" step="any">
			<i class="fa fa-volume-up"> </i>
		</div>
		<div class="clearfix"></div>
	</div>
</div>